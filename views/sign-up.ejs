<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" href="/header.css">
  <link rel="stylesheet" href="/sign-up-log-in.css">
  <title>Sign Up - Folder Drive</title>
</head>

<body>
  <%- include('./partials/header.ejs') %>
  <main class="main-container">
    <div class="main-header-container">
      <h2 class="main-header-h2">Sign Up</h2>
      <h3 class="main-header-h3">Already have an account? <a class="sign-up-log-in-anchor" href="/users/log-in">Log in</a></h3>
    </div>
    <form class="main-form-container" action="/users/sign-up" method="POST">
      <label for="username">Username *</label>
      <% if (locals.userName) { %>
      <input type="text" name="username" id="username" value="<%= userName %>" />
      <% } else { %>
      <input type="text" name="username" id="username" />
      <% } %>
      <label for="password">Password *</label>
      <% if (locals.userPassword) { %>
      <input type="password" name="password" id="password" value="<%= userPassword %>" />
      <% } else { %>
      <input type="password" name="password" id="password" />
      <% } %>
      <label for="confirm_password">Confirm Password *</label>
      <% if (locals.userConfirmPassword) { %>
      <input type="password" name="confirm_password" id="confirm_password" value="<%= userConfirmPassword %>" />
      <% } else { %>
      <input type="password" name="confirm_password" id="confirm_password" />
      <% } %>
      <%- include('./partials/errors.ejs') %>
      <div class="main-form-btn-container">
        <button class="main-form-submit-btn" type="submit">Create Account</button>
      </div>
    </form>
  </main>
</body>

</html>