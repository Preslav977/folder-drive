<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Create Folder - Folder Drive</title>
</head>

<body>
  <%- include('../index.ejs') %>
  <div class="dialog-container">
    <dialog open="" class="modal-pop-up" id="create-folder-modal">
      <div class="modal-header-container">
        <p>New Folder</p>
        <p><a href="/folders">X</a></p>
      </div>
      <form class="main-form-container modal-form-container" action="/folders/create" method="POST">
        <label for="name">Name</label>
        <% if (locals.folderName) { %>
        <input class="modal-input" type="text" name="name" id="name" value="<%= folderName %>">
        <% } else { %>
        <input class="modal-input" type="text" name="name" id="name" value="">
        <% } %>
        <%- include('../partials/errors.ejs') %>
        <div class="main-form-btn-container">
          <button class="main-form-submit-btn modal-button" id="close-createfolder-modal" type="submit">Create Folder</button>
        </div>
      </form>
    </dialog>
  </div>

</body>

</html>